{
	"compilerOptions": {
		"allowJs": true,
		"module": "Preserve",
		"target": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"paths": {
			"@spt/*": ["./types/*"]
		}
	},
	"exclude": [
		"node_modules",
		"dist",
		"gulpfile.mjs",
		"./transform.ts",
		"./transform.js"
	]
}
